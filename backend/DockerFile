# Use the official Maven image with Java 17 for the build stage
FROM maven:3.8.7-openjdk-17 as build
WORKDIR /app
# Copy the project files
COPY . .
# Build the application and skip tests to reduce build time
RUN mvn clean package -DskipTests

# Use the official OpenJDK 17 runtime image for the production stage
FROM openjdk:17-jdk-slim
WORKDIR /app
# Copy the built jar from the build stage
COPY --from=build /app/target/backend-0.0.1-SNAPSHOT.jar app.jar
# Expose the port your Spring Boot application runs on (default: 8080)
EXPOSE 8080
# Run the Spring Boot application
ENTRYPOINT ["java", "-jar", "app.jar"]
